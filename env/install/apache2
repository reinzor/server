sudo apt-get install apache2

# Create the Directory Structure
sudo mkdir -p /var/www/benikeenbanaan.nl/public_html
sudo mkdir -p /var/www/server.reinzor.nl/public_html

# Set permissions
sudo chown -R $USER:$USER /var/www/benikeenbanaan.nl/public_html
sudo chown -R $USER:$USER /var/www/server.reinzor.nl/public_html
sudo chmod -R 755 /var/www

echo '** Setting up apache virtual host: **'
echo '- Create pages for Each Virtual Host'
echo '- Create virtual host files. Copy /etc/apache2/sites-available/000-default.conf to /etc/apache2/sites-available/SITENAME.conf and edit :)'
echo '- Activate virtual host files by creating symbolic links in /etc/apache2/sites-enables/'
